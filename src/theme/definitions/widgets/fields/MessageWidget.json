{
  "name": "MessageWidget",
  "title": "Message specific variables",
  "description": "",
  "type": "group",
  "contents": [{
      "name": "gbc-MessageWidget-margin-ratio",
      "description": "",
      "type": "number",
      "defaultValue": "$theme-margin-ratio"
    },
    {
      "name": "gbc-MessageWidget-z-index",
      "title": "MessageWidget z-index",
      "description": "",
      "type": "number",
      "defaultValue": "$z-index-Message"
    },
    {
      "name": "gbc-MessageWidget-color",
      "description": "",
      "type": "color",
      "defaultValue": "$theme-message-color"
    },
    {
      "name": "gbc-MessageWidget-background-color",
      "description": "",
      "type": "color",
      "defaultValue": "$theme-message-background-color"
    },
    {
      "name": "gbc-MessageWidget-shadow-color",
      "description": "",
      "type": "color",
      "defaultValue": "$theme-overlay-background-color"
    },
    {
      "name": "gbc-MessageWidget-gasadmin-color",
      "description": "Color of notification popup when gasadmin broadcast a message",
      "type": "color",
      "defaultValue": "$theme-primary-color"
    },
    {
      "name": "gbc-MessageWidget-gasadmin-background-color",
      "description": "Background Color of notification popup when gasadmin broadcast a message",
      "type": "color",
      "defaultValue": "$theme-message-background-color"
    },
    {
      "name": "gbc-MessageWidget-gasadmin-display-position",
      "description": "Position of the gasadmin message.",
      "type": "message-display-position",
      "defaultValue": "top-center"
    },
    {
      "name": "gbc-MessageWidget-warning-color",
      "description": "Color of a warning message",
      "type": "color",
      "defaultValue": "$mt-black"
    },
    {
      "name": "gbc-MessageWidget-warning-background-color",
      "description": "Background Color of a warning message",
      "type": "color",
      "defaultValue": "$mt-orange-200"
    }
  ]
}
